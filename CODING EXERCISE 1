
RectangleComputation :

package exercise1;
/*This program to print the area and perimeter of a rectangle,based on its length and width (in doubles)*/
class RectangleComputation {

	public static void main(String[] args) {
		// assume length is 4.0 and width value is 5.0
		double length=4.0, width=5.0, area, perimeter;
		
		//input
		area = length*width;
		perimeter = (length*2.0) + (width*2.0);
		
		//output
		System.out.print("The area is "); 
		System.out.println(area); //ln for next line..
		System.out.print("The perimeter is ");
		System.out.println(perimeter);
    
    }
  }
    
    
    
    
    
   CylinderComputation : 
    
  package exercise1;

/*This program to calculate the surface area, base area, and volume of a cylinder, 
 based on its radius and height (in doubles)*/

class CylinderComputation {

	public static void main(String[] args) {
		// assume radius is 1.3 and height is 8.0
		double radius=1.3, height=8.0, surfaceArea, baseArea, volume;
		final double PI = 3.14159265;  //"final" to show it's value cannot be change
		
		//calculate(process)
		surfaceArea = (2.0*PI*radius*radius)+(2.0*PI*radius*height);
		baseArea = (2.0*PI*radius);
		volume = (PI*radius*radius*height);
		
		//print result(output)
		System.out.print("The surfaceArea is ");
		System.out.println(surfaceArea); 
		System.out.print("The baseArea is ");
		System.out.println(baseArea);
		System.out.print("The volume is ");
		System.out.println(volume);
	}

}
		
